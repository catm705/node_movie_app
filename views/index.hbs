
<div class="container">
  <h1>Movies & Series</h1>
  <form class="search-form">
    <div>
      <label for="t">Search Title:</label>
      <input type="text" id="title" name="title">
    </div>
    <div>
      <button onclick="search(); return false;">Search</button>
      <button onclick="reset(0);">Reset</button>
    </div>

    <form action="/insert" method="post">
      <h2>Search List: </h2>
      <div class="list">
        <div id="movies"></div>
      </div>
    </form>
  </form>
  <br>

  <section class="insert">
    <h3>Add Favorite</h3>
    <form action="/insert" method="post">
        <div class="input">
            <label for="title">Title</label>
            <input type="text" id="title" name="title">
        </div>
        <div class="input">
            <label for="content">Year</label>
            <input type="text" id="year" name="year">
        </div>
        <div class="input">
            <label for="author">Director</label>
            <input type="text" id="director" name="director">
        </div>
        <div class="input">
            <label for="author">Actors</label>
            <input type="text" id="actors" name="actors">
        </div>
        <button type="submit">SAVE</button>
    </form>
  </section>
  <section class="get">
      <h3>
        <a href="/get-data">Get Favorites</a>
      </h3>
      <div>
          {{# each items }}
              <article class="item">
                  <div>Title: {{ this.title }}</div>
                  <div>Year: {{ this.year }}</div>
                  <div>Director: {{ this.director }}</div>
                  <div>Actors: {{ this.actors }}</div>
                  <div>ID: {{ this._id }}</div>
              </article>
          {{/each}}
      </div>
  </section>
  <section class="update">
      <h3>Update Favorite</h3>
      <form action="/update" method="post">
          <div class="input">
              <label for="id">ID</label>
              <input type="text" id="id" name="id">
          </div>
          <div class="input">
              <label for="title">Title</label>
              <input type="text" id="title" name="title">
          </div>
          <div class="input">
              <label for="year">Year</label>
              <input type="text" id="year" name="year">
          </div>
          <div class="input">
              <label for="director">Director</label>
              <input type="text" id="director" name="director">
          </div>
          <div class="input">
              <label for="actors">Actors</label>
              <input type="text" id="actors" name="actors">
          </div>
          <button type="submit">UPDATE</button>
      </form>
  </section>
  </section>
  <section class="delete">
    <h3>Delete Data</h3>
    <form action="/delete" method="post">
        <div class="input">
            <label for="id">ID</label>
            <input type="text" id="id" name="id">
        </div>
        <button type="submit">DELETE</button>
    </form>
</div>
